<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:textColor="#000000"
    android:layout_height="fill_parent"
    android:background="#707070" 
    android:orientation="vertical">
	<TextView  
   	 	android:layout_width="fill_parent" 
    	android:layout_height="25dp" 
    	android:text="SMS Survey"
    	android:background="#707070"
    	 
    />
	<DigitalClock android:layout_gravity="right" android:id="@+id/digitalClock1" android:text="DigitalClock" android:layout_height="wrap_content" android:layout_width="wrap_content"></DigitalClock>
	   <LinearLayout android:layout_height="wrap_content"
	    android:id="@+id/linearLayout1"
	    android:layout_width="fill_parent"
	    android:background="#707070" android:baselineAligned="false" android:orientation="horizontal">
	    
		<TextView android:text="Main Menu" android:layout_gravity="center" android:background="#707070" android:textColor="#000000" android:layout_height="20dp" android:layout_width="70dp"></TextView>
	    
	    </LinearLayout>
	
     	<Button
        android:id="@+id/btnForms"
        android:text="Forms"
        android:textColor="#000000"
        android:layout_width="fill_parent"
       	android:layout_height="65dp" android:soundEffectsEnabled="true"/>
     
        <Button
        android:id="@+id/btnContacts"
        android:text="Contacts"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="65dp"/>
      
        <Button
        android:id="@+id/btnMessages"
        android:text="Messages"
        android:layout_width="fill_parent"
        android:layout_height="65dp"/>
        <Button
        android:id="@+id/btnStats"
        android:text="Stats"
        android:layout_width="fill_parent"
        android:layout_height="65dp"/>
        
                
        <Button
        android:id="@+id/btnAbout"
        android:text="About Us"
        android:layout_width="fill_parent"
        android:layout_height="65dp"/>
       
        <TextView  
   	 	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent" 
    	android:text="Copyright 2012-SMS Survey, Rights Reserved"
    	android:textColor="#000000"
    	android:background="#707070"
    	android:textSize="15dp"
        android:layout_gravity="center"/>
</LinearLayout>
