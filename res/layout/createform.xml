<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
	
		<ScrollView
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:scrollbars="vertical"
    	android:id="@+id/ScrllViewFields"
    	android:fadeScrollbars="true">
    		
    	<LinearLayout 
    	android:layout_width="fill_parent"
   		android:layout_height="match_parent"
   		android:orientation="vertical">
    		
    	<TextView 
    	android:layout_width="fill_parent" 
    	android:layout_height="30dp" 
    	android:text="Create Table"
    	android:textSize="25dp"
    	android:textStyle="bold">
    	</TextView>
		
        
		<TextView  
   	 	android:layout_width="fill_parent" 
    	android:layout_height="25dp" 
    	android:text="Enter Form Name" 
    	/>
    	
		<EditText 
		 android:id="@+id/edtFname"
		 android:layout_height="wrap_content"
		 android:lines="1"
		 android:layout_width="fill_parent">
		<requestFocus></requestFocus></EditText>
		<TextView  
   	 	android:layout_width="fill_parent" 
    	android:layout_height="10dp" 
    	android:visibility="invisible"
    	android:id="@+id/tvSeperator"
    	/>
		
		<TextView  
   	 	android:layout_width="fill_parent" 
    	android:layout_height="25dp" 
    	android:text="Enter Number of Fields" 
    	/>
    	
		<EditText 
		 android:id="@+id/edtFields"
		 android:layout_height="wrap_content"
		 android:numeric="integer"
		 android:lines="1"
		 android:layout_width="fill_parent">
		<requestFocus></requestFocus></EditText>
		
		<LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical"
    	android:id="@+id/LinLayAdd">
		</LinearLayout>
		</LinearLayout>
		</ScrollView>
		
    	<LinearLayout 
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	
    	android:baselineAligned="false"
    	android:id="@+id/LinLayBtns">
    	
    	<Button
        android:id="@+id/btnCreate"
        android:text="   Create  "
        android:layout_height="wrap_content" 
        android:layout_width="match_parent" 
        android:layout_weight="1">
       	</Button>
       	
       	<Button 
       	android:text="Back To Form Menu"
       	 android:id="@+id/btnMain2"
       	 android:soundEffectsEnabled="true" 
       	 android:layout_height="wrap_content" 
       	 android:layout_width="match_parent" 
       	 android:layout_weight="1">
       	 </Button>
       	 </LinearLayout>
       	<TextView  
   	 	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	
    	android:text="Copyright 2012-SMS Survey, Rights Reserved"
    	android:textSize="10dp"
    	/>
		
    </LinearLayout>